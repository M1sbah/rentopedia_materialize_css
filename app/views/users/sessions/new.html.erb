<h2 class="card-panel teal lighten-2 center-align hoverable">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"validate" %>
      <%= f.label :email %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "current-password", class:"validate" %>
      <%= f.label :password %><br />
    </div>
  </div>

  <div class="row" >
    <div class="col">
      <% if devise_mapping.rememberable? %>
        <p>
          <label>
            <input type="checkbox" name="user[remember_me]" />
            <span>Remember me</span>
          </label>
        </p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="actions">
    <div class="col">
        <%= f.submit "Log in", class:"waves-effect waves-light btn" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
